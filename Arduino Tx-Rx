#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);

#define FLAME_PIN 2
#define LED_PIN 3
#define BUZZER_PIN 4

void setup() {
  pinMode(FLAME_PIN, INPUT_PULLUP);   // <<< FIXED !!!
  pinMode(LED_PIN, OUTPUT);
  pinMode(BUZZER_PIN, OUTPUT);

  Serial.begin(9600);

  lcd.init();
  lcd.backlight();

  lcd.setCursor(0, 0);
  lcd.print("Fire Detector");
  lcd.setCursor(0, 1);
  lcd.print("System Ready");
  delay(1500);
}

void loop() {
  int flameState = digitalRead(FLAME_PIN);

  if (flameState == LOW) {   // FIRE
    digitalWrite(LED_PIN, HIGH);
    digitalWrite(BUZZER_PIN, HIGH);

    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("FIRE DETECTED!");
    lcd.setCursor(0, 1);
    lcd.print("ALERT ALERT!");

    Serial.println("FIRE");
  } 
  else {  // SAFE
    digitalWrite(LED_PIN, LOW);
    digitalWrite(BUZZER_PIN, LOW);

    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Status: Normal");
    lcd.setCursor(0, 1);
    lcd.print("No Fire Found");

    Serial.println("SAFE");
  }

  delay(300);
}
